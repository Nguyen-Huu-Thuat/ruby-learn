<div class="container">
  <% if admin_signed_in? && current_admin.super_admin? %>
    <%= link_to "Roles", roles_path, class: "btn btn-primary mt-4" %>
    <%= link_to "Staff Users", staff_users_path, class: "btn btn-primary mt-4 ml-4" %>
  <% end %>
  <% if admin_signed_in? && current_admin.staff_user? %>
    <%= link_to "Products", products_path, class: "btn btn-primary mt-4 ml-4" %>
  <% end %>
  <% if admin_signed_in? && !current_admin.super_admin? %>
    <%= link_to "Update Password", edit_admin_registration_path, class: "btn btn-primary ml-4 mt-4" %>
    <%= link_to "Update Profile", edit_customer_path, class: "btn btn-primary ml-4 mt-4" %>
    <%= link_to "Delete Account", registration_path(current_admin), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", "turbo-method": :delete}, method: :delete, class: "btn btn-primary ml-4 mt-4"  %>
  <% end %>
</div>